        <div class="page-header">
            <h1><%= title %></h1>
            <small>重度科幻迷</small>
        </div>
    </div>
</div>
<div class="navbar navbar-default navbar-fixed-bottom">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="/">重度科幻迷</a>
        </div>
        <p class="navbar-text navbar-right">
            <a class="navbar-link" data-toggle="modal" data-target="#signupModal" href="">注册</a>
                <span>&nbsp|&nbsp</span>
            <a class="navbar-link" data-toggle="modal" data-target="#signinModal" href="">登录</a>
        </p>

    </div>

</div>


<div id="signupModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="POST" action="/usr/signup">
                <div class="modal-header">
                    注册
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="signupName">
                            用户名
                        </label>
                        <input id="signupName" class="form-control" name="user[name]" type="text"/>
                    </div>
                    <div class="form-group">
                        <label for="signupPassword">
                            密码
                        </label>
                        <input id="signupPassword" class="form-control" name="user[password]" type="password"/>
                    </div>

                </div>
                <div class="modal-footer">
                    <button class="btn btn-dafault" type="button" data-dismiss="modal">关闭</button>
                    <button class="btn btn-success" type="submit" >提交</button>

                </div>
            </form>
        </div>
    </div>
</div>