<%- include ../layout %>

<div class="container">
    <div class="row">
        <form action="/admin/movie/new" method="post" class="form-horizontal">
            <input type="hidden" name="movie[_id]" value="<%= movie._id%>"/>
            <div class="form-group">
                <label for="inputTitle" class="col-sm-3">电影名字</label>
                <div class="col-sm-10">
                    <input id="inputTitle" class="form-control" name="movie[title]" type="text" value="<%= movie.title %>" required/>
                </div>
            </div>
            <div class="form-group">
                <label for="inputDoctor" class="col-sm-3">导演</label>
                <div class="col-sm-10">
                    <input id="inputDoctor" class="form-control" name="movie[doctor]" type="text" value="<%= movie.doctor %>" required/>
                </div>
            </div>
            <div class="form-group">
                <label for="inputCountry" class="col-sm-3">国家</label>
                <div class="col-sm-10">
                    <input id="inputCountry" class="form-control" name="movie[country]" type="text" value="<%= movie.country %>" required/>
                </div>
            </div>
            <div class="form-group">
                <label for="inputLanguage" class="col-sm-3">语言</label>
                <div class="col-sm-10">
                    <input id="inputLanguage" class="form-control" name="movie[language]" type="text" value="<%= movie.language %>" required/>
                </div>
            </div>
            <div class="form-group">
                <label for="inputPoster" class="col-sm-3">海报地址</label>
                <div class="col-sm-10">
                    <input id="inputPoster" class="form-control" name="movie[poster]" type="text" value="<%= movie.poster %>" required/>
                </div>
            </div>
            <div class="form-group">
                <label for="inputFlash" class="col-sm-3">片源地址</label>
                <div class="col-sm-10">
                    <input id="inputFlash" class="form-control" name="movie[flash]" type="text" value="<%= movie.flash %>" required/>
                </div>
            </div>
            <div class="form-group">
                <label for="inputYear" class="col-sm-3">上映年份</label>
                <div class="col-sm-10">
                    <input id="inputYear" class="form-control" name="movie[year]" type="text" value="<%= movie.year %>" required/>
                </div>
            </div>
            <div class="form-group">
                <label for="inputSummary" class="col-sm-3">简介</label>
                <div class="col-sm-10">
                    <input id="inputSummary" class="form-control" name="movie[summary]" type="text" value="<%= movie.summary %>" required/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input class="btn btn-default" type="submit" name="录入" value="录入" />
                </div>

            </div>
        </form>
    </div>
</div>

