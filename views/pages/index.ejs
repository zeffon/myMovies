<%- include ../layout %>

<div class="container">
    <div class="row">
        <% movies.forEach(function (item, index) { %>
        <div class="col-md-2">
            <div class="thumbnail">
                <a href="/movie/<%= item._id %>">
                    <img  src="<%= item.poster%>" alt="<%= item.title%>" class="img-thumbnail">
                </a>


                <div class="caption">
                    <h3><%= item.title %></h3>
                    <p><a class="btn btn-primary" href="/movie/<%= item._id %>" role="button">观看预告片</a></p>
                </div>
            </div>

        </div>

        <% }); %>
    </div>
</div>





