<%- include ../layout %>

<div class="container">
    <div class="row">
    
        <table class="table table-hover table-bordered">
            <thead>
            <tr>
                <th>电影名字</th>
                <th>导演</th>
                <th>国家</th>
                <th>上映年份</th>
                <th>录入时间</th>
                <th>查看</th>
                <th>更新</th>
                <th>删除</th>
            </tr>
            </thead>
            <tbody>
            <% movies.forEach(function (item, index) { %>
                <tr class="item-id-<%= item._id%>">
                    <td><%= item.title%></td>
                    <td><%= item.doctor%></td>
                    <td><%= item.country%></td>
                    <td><%= item.year%></td>
                    <td><%= moment(item.meta.updateAt).format('MM/DD/YYYY')%></td>
                    <td><a target="_blank" href="../movie/<%= item._id%>">查看</a></td>
                    <td><a target="_blank" href="../admin/update/<%= item._id%>">修改</a></td>
                    <td>
                        <button class="btn btn-danger btn-sm del" type="button" data-id="<%= item._id%>">删除</button>
                    </td>
                </tr>

            <%});%>
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript" src="/libs/javascripts/admin.js"></script>
